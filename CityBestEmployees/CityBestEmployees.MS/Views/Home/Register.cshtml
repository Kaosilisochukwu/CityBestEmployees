@{
}


<div class="signup-form col-4 offset-4">
    <form asp-action="Register" asp-controller="Home" method="post" enctype="multipart/form-data">
        <h2>Register</h2>
        <p class="hint-text">Create your account. It's free and only takes a minute.</p>
        @if (ViewBag.Errors != null)
        {
            @foreach (var item in ViewBag.Errors)
            {
                <p class="alert-danger">@item.Description</p>
            }
        }

        <div class="form-group">
            <div class="row">
                <div class="col">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name">
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="col">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name">
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" name="email" placeholder="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <select class="form-control" asp-for="Department">
                @foreach (var dept in ViewBag.Departments)
                {
                    <option>@dept</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" name="password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <input asp-for="Photo" class="form-control" placeholder="Add Photo" required="required">
            <span asp-validation-for="Photo"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-primary btn-block">Register</button>
        </div>
    </form>
    <div class="text-center">Already have an account? <a href="#">Sign in</a></div>
</div>