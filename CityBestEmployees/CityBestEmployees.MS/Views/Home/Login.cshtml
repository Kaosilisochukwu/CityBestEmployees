@model CityBestEmployees.MS.DTOs.SignInDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="signup-form col-4 offset-4">
    <form asp-action="Login" asp-controller="Home" method="post" enctype="multipart/form-data">
        <h2>Login</h2>
        <p class="hint-text">Create your account. It's free and only takes a minute.</p>
        @if (ViewBag.Error != null)
        {
            <p class="alert-danger">@ViewBag.Error</p>
        }

        @if (ViewBag.Errors != null)
        {
            @foreach (var item in ViewBag.Errors)
            {
                <p class="alert-danger">@item.Description</p>
            }
        }

        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" name="email" placeholder="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" name="password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label class="form-check-label"><input type="checkbox" asp-for="RememberMe">Remember me</label>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-primary btn-block">Register</button>
        </div>
    </form>
    <div class="text-center">Already have an account? <a href="#">Sign in</a></div>
</div>